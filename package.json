{
  "name": "jest-preset-stylelint",
  "version": "1.3.0",
  "description": "Common configuration options for Jest in stylelint environments.",
  "keywords": [
    "stylelint",
    "jest",
    "jest-preset",
    "preset"
  ],
  "author": "stylelint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint/jest-preset-stylelint.git"
  },
  "files": [
    "create-jest-preset.js",
    "getOsEol.js",
    "jest-setup.js"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "postcss-less": "^1.1.5"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-stylelint": "^8.1.0",
    "jest": "^22.4.3",
    "jest-preset-stylelint": ".",
    "npm-run-all": "^4.1.2",
    "npmpub": "^3.1.0",
    "remark-cli": "^5.0.0",
    "remark-preset-lint-consistent": "^2.0.1",
    "remark-preset-lint-recommended": "^3.0.1",
    "stylelint": "^9.1.3"
  },
  "peerDependencies": {
    "jest": ">=22",
    "stylelint": "^9.1.3"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "postinstall": "node create-jest-preset.js",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "rules": {
      "node/no-unpublished-require": "off"
    }
  },
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  }
}
